<h1>Cocktails</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.name %></td>
        <td><%= link_to 'Show', cocktail_path(cocktail), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<span><%= link_to 'New Cocktail', new_cocktail_path, class: "btn btn-primary"%></span>
